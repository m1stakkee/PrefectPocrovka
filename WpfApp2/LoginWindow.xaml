<Window x:Class="WpfApp2.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация" 
        MinHeight="400" 
        MinWidth="500"
        MaxHeight="450"
        MaxWidth="550" Height="350">
    <Grid Margin="11">

        <StackPanel VerticalAlignment="Center"
                        Width="200">
        </StackPanel>

        <Image HorizontalAlignment="Center"  
               Name="MyImg" 
               VerticalAlignment="Top" 
               Width="264" 
               Height="146"
               Source="Resources/icon.png"/>



        <Label 
            Content="Имя пользователя:" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center" 
            Margin="0, -10, 0, 0"/>
        <TextBox 
            x:Name="UsernameTextBox" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center" 
            Margin="0,30,0,0"/>

        <Label 
            Content="Пароль:" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center" 
            Margin="0,60,0,0"/>
        <PasswordBox 
            x:Name="PasswordBox" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center" 
            Margin="0,100,0,0"/>

        <Button 
            Content="Войти" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center" 
            Margin="0,160,0,0" 
            Click="LoginButton_Click" IsEnabled="True"/>

        <TextBlock 
            x:Name="LoginErrorTextBlock" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center" 
            Margin="0,210,0,0" 
            Foreground="Red"/>

    </Grid>
</Window>
