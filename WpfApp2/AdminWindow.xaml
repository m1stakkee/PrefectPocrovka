<Window x:Class="WpfApp2.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="AdminWindow" 
        MinHeight="570" 
        MinWidth="750"
        MaxHeight="620"
        MaxWidth="800"
        Height="570"
        Width="770"
        >
    <Grid>

        <StackPanel 
            HorizontalAlignment="Left" 
            Width="550">
            <DataGrid 
                x:Name="AdminWin" 
                AutoGenerateColumns="False" 
                Margin="0,0,0,-80" 
                
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                >

                
                <DataGrid.Columns>

                    <DataGridTextColumn 
                        Header="ID" 
                        Binding="{Binding Id}" 
                        IsReadOnly="True"
                        Width="Auto"/>
                    
                    <DataGridTextColumn
                        Header="FurstName"
                        Binding="{Binding FurstName}"
                        Width="*"/>
                    <DataGridTextColumn
                        Header="SurName"
                        Binding="{Binding SurName}"
                        Width="*"/>
                    <DataGridTextColumn
                        Header="LastName"
                        Binding="{Binding LastName}"
                        Width="*"/>
                    <DataGridTextColumn 
                        Header="Login" 
                        Binding="{Binding Login}" 
                        Width="*"/>
                    <DataGridTextColumn
                        Header="Phone" 
                        Binding="{Binding Phone}" 
                        Width="*"/>
                    <DataGridTextColumn
                        Header="Role"
                        Binding="{Binding Roles.Name}"
                        Width="*"/>

                    



                </DataGrid.Columns>

            </DataGrid>
        </StackPanel>

        <StackPanel 
            VerticalAlignment="Top"
            HorizontalAlignment="Right"
            MinHeight="300"
            MinWidth="200">
            <GroupBox 
           Header="FurstName"
            Margin="0 10 0 0 ">
                <TextBox
            Name="TxbFurstName"
            />
            </GroupBox>

            <GroupBox 
            Header="SurName"
            Margin="0 10 0 0 ">
                <TextBox
            Name="TxbSurName"
               />
            </GroupBox>

            <GroupBox 
            Header="LastName"
            Margin="0 10 0 0 ">
                <TextBox
            Name="TxbLastName"
               />
            </GroupBox>


            <GroupBox 
            Header="Login"
            Margin="0 10 0 0 ">
                <TextBox
            Name="TxbLogin"
                        />
            </GroupBox>

            <GroupBox
            Header="Phone"
            Margin="0 10 0 0 ">
                <TextBox
            Name="TxbPhone"
               />
            </GroupBox>

            <GroupBox 
            Header="Role">
                <ComboBox
            Name="CmbRole"
            Margin="0 10 0 0 "
            DisplayMemberPath="Name"
            SelectedValuePath="Roleid"
            
             />
                
            </GroupBox>


            <GroupBox 
            Header="Password"
            Margin="0 10 0 0 ">
                <PasswordBox
            Name="PsbPassword"/>

            </GroupBox>

            <GroupBox 
            Header="Repeat Password"
            Margin="0 10 0 0 ">
                <PasswordBox
            Name="PsbPasswordRepeat"/>
            </GroupBox>





        </StackPanel>

        <StackPanel 
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Width="200"
            Margin=" 0 0 0 10"
                            >

            <Button
                x:Name="BtnAdd"
                Content="Добавить"
                Click="BtnAdd_Click"
                Height="30"/>

            
            <Button
                x:Name="BtnDelete"
                Content="Удалить"
                Click="BtnDelete_Click"
                Height="30"
                            />

            
        </StackPanel>
    </Grid>
</Window>
